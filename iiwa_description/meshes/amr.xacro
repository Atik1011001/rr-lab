<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="https://ros.org/wiki/xacro">
  <!-- Here we define the 2 parameters of the macro -->
  <xacro:macro name="amr" params="prefix connected_to">
    <!-- Create a fixed joint with a parameterized name. -->
    <joint name="${prefix}amr_joint" type="prismatic">
      <!-- The parent link must be read from the robot model it is attached to. -->
      <parent link="${connected_to}"/>
      <child link="${prefix}amr_link"/>
      <!-- The tool is directly attached to the flange. -->
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit effort="2000.0" lower="-10" upper="10" velocity="0.5"/>
    </joint>
    <link name="${prefix}amr_link">
      <visual>
        <geometry>
          <!-- The path to the visual meshes in the package. -->
          <mesh filename="package://dual_tx2_60/meshes/AMR_long.stl"/>
<!--          <mesh filename="package://dual_tx2_60/meshes/AMR_screen.stl"/>-->
        </geometry>
        <xacro:material_staubli_ral_grey_aluminium />
      </visual>
      <collision>
        <geometry>
          <!-- The path to the collision meshes in the package. -->
<!--          <mesh filename="package://constellation/models/Origins-Demo-System-ROS-Centred.stl"/-->
          <mesh filename="package://dual_tx2_60/meshes/AMR_screen_long.stl"/>
        </geometry>
      </collision>
    </link>


  </xacro:macro>
</robot>